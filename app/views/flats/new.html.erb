<div class="col-10 m-auto">
<h1>Add a new Flat</h1>
<%= simple_form_for(@flat, html: { class: 'form-horizontal' }) do |f| %>
    <div class="col-sm-6">
      <%= f.input :name, input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' } %>
    </div>
    <div class="col-sm-6">
      <%= f.input :address, input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' } %>
    </div>
  <div class="col-sm-6">
    <%= f.input :description, as: :text, input_html: { class: 'form-control', rows: 5 }, wrapper_html: { class: 'mb-3' } %>
  </div>
    <div class="col-sm-6">
      <%= f.input :price_per_night, input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' } %>
    </div>
    <div class="col-sm-6">
      <%= f.input :number_of_guests, input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' } %>
    </div>
  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '#', class: 'btn btn-danger', onclick: 'window.history.back(); return false;' %>
  </div>
<% end %>
</div>
